{
  "name": "bandit-trading-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec tsx ./api/server.ts",
    "start": "cross-env NODE_ENV=production tsx ./api/server.ts",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "eslint": "eslint . --ext .js,.ts,.tsx,.jsx,.cjs,.mjs --fix",
    "type-check": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@sequelize/sqlite3": "^7.0.0-alpha.43",
    "@types/sequelize": "^4.28.20",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.7",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "tsx": "^4.19.2",
    "zano_web3": "^7.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-jejolare": "^3.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
